<%- include('partials/header') %>

<body>
    <%- include('partials/homebar') %>
    <hr>
    <div class="jumbotron">
        <h1 class="display-4">Bem vindo ao meu site</h1>
        <p class="lead">Este é meu blogue criado apenas para praticar desenvolvimento web com NodeJS - Bibliotecas usadas disponíveis em: <a href="https://github.com/jcruz375/Blog/blob/master/package.json">Package.json</a></p>
        <hr class="my-4">
        <p>Repositório deste projeto</p>
        <a class="btn btn-primary btn-lg" href="https://github.com/jcruz375/Blog" role="button">Ir para Repositório</a>
    </div>
    <div class="container">
        <% articles.forEach(article => { %>
        <div class="card">
            <div class="card-header">
                <%= article.title %>
            </div>
            <div class="card-body">
                <a href="/articles/<%= article.slug %>" class="btn btn-success">Ler artigo</a>
            </div>
        </div>
        <br>
        <% }) %>

        <div class="row">
            <div class="col col-12">

                <a class="btn btn-success" href="/articles/page/2" style="float: right;">Próxima >>></a>

            </div>
        </div>
        <hr>
    </div>
</body>

<%- include('partials/footer') %>